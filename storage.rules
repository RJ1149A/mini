rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all files
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // TEMPORARY: Allow any authenticated user to write (for testing)
    // This is permissive but safe (requires valid authentication)
    // After testing uploads work, we'll revert to strict rules
    match /feed/{allFiles=**} {
      allow write: if request.auth != null && request.resource.size < 52428800;
    }

    match /media/{allFiles=**} {
      allow write: if request.auth != null && request.resource.size < 52428800;
    }

    match /academia/{allFiles=**} {
      allow write: if request.auth != null && request.resource.size < 52428800;
    }

    match /uploads/{allFiles=**} {
      allow write: if request.auth != null && request.resource.size < 52428800;
    }
  }
}
